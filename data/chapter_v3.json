      ]
    },
    "ch1_pe_stretch_premium_choice": {
      "onEnter": [
        { "op": "narration", "args": { "text": "After the test, everyone starts their cool-down stretches. I notice Jordan leaning against the bleachers, wincing as he stretches his arms. He looks completely drained." } }
      ],
      "choices": [
        {
          "id": "ch1_prem_stretch",
